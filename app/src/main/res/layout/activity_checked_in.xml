<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckedInActivity"
    android:id="@+id/rl"
    android:visibility="invisible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:id="@+id/tvs"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon Address"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:textSize="14sp"
            android:id="@+id/tvsa"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks, you're now checked in!"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12sp"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="horizontal"
            android:layout_marginTop="20sp"
            android:background="@color/online"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="Estd time "

                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text=""
                android:id="@+id/tvwt"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="24dp"/>
            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="MIN."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"/>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Please let us know when you arrive,\nso we can complete your check in."
            android:gravity="center"
            android:visibility="gone"
            android:textSize="18dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:backgroundTint="@color/colorPrimary"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/bqr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimary"
                android:text="Reached the Salon"
                android:textSize="20sp"
                android:textColor="#fff" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:backgroundTint="@color/offline"
            app:cardCornerRadius="10sp"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            >

            <Button
                android:id="@+id/bcancelcheckin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/offline"
                android:text="Cancel Check In"
                android:textSize="20sp"
                android:textColor="#fff" />

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="@color/bg"
            android:layout_marginTop="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:src="@drawable/ic_star_border_black_24dp"
                android:id="@+id/ivstar"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:id="@+id/tvmysalon"
                android:layout_weight="4"
                android:layout_marginLeft="15sp"
                android:textSize="20sp"
                android:text="Add to My Salon"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="@color/bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:src="@drawable/ic_directions_black_24dp"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:layout_weight="4"
                android:layout_marginLeft="15sp"
                android:textSize="20sp"
                android:id="@+id/tvdirections"
                android:text="Directions"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="@color/bg"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:src="@drawable/ic_notifications_active_black_24dp"/>

            <TextView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:gravity="center_vertical"
                android:layout_weight="4"
                android:layout_marginLeft="15sp"
                android:textSize="20sp"
                android:id="@+id/tvreminder"
                android:text="Set a Reminder"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:background="@color/bg"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:layout_margin="10sp"
            android:textSize="14sp"
            android:text="Please note that this is not an appointment and there may be a wait when you arrive"/>



    </LinearLayout>

    </ScrollView>

</RelativeLayout>
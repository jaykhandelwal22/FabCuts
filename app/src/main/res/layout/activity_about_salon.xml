<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutSalon">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/etname"
            android:layout_width="0sp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/grey"
            android:hint=""
            android:layout_marginRight="15sp"
            android:inputType="text"
            android:maxLines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/etphone"
            android:layout_width="0sp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/grey"
            android:hint=""
            android:layout_marginRight="15sp"
            android:inputType="text"
            android:maxLines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp"
        android:visibility="gone">

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Guests"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/tvguestcount"
            android:text="1"
            android:gravity="center"
            android:textSize="20sp"/>


        <ImageButton
            android:layout_width="60sp"
            android:layout_marginLeft="50sp"
            android:id="@+id/ibplus"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:background="@null"
            />

        <ImageButton
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:id="@+id/ibminus"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:background="@null"
            />



    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:text="Estimated Wait Time :"
            android:id="@+id/tvewt"
            android:textAlignment="center"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="10sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="25sp"
        android:elevation="35sp">

        <Button
            android:id="@+id/bcheckmein"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorPrimary"
            android:text="Check Me In"
            android:textSize="20sp"
            android:textColor="#fff" />

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressCount"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:visibility="gone"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salon Name"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="20sp"
        android:id="@+id/tvsalonname"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salon Address"
        android:id="@+id/tvsalonaddress"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center"
        android:textSize="16sp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/bg"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvservicelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>






</LinearLayout>

</ScrollView>